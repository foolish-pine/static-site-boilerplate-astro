    "@eslint/js": "9.31.0",
    "astro-robots-txt": "1.0.0",
    "eslint": "9.31.0",
    "eslint-config-prettier": "10.1.5",
    "eslint-plugin-astro": "1.3.1",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "globals": "16.3.0",
    "lefthook": "1.12.2",
    "npm-run-all2": "8.0.4",
    "postcss-preset-env": "10.2.4",
    "prettier": "3.6.2",
    "prettier-plugin-astro": "0.14.1",
    "stylelint": "16.21.1",
