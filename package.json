{
  "name": "static-site-boilerplate-astro",
  "type": "module",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "lint": "run-p lint:*",
    "lint:astro": "astro check",
    "lint:markuplint": "markuplint \"**/*.astro\"",
    "lint:eslint": "eslint \"**/*.{astro,js,ts}\"",
    "lint:stylelint": "stylelint \"**/*.{astro,css,scss}\"",
    "lint:prettier": "prettier --check src",
    "fix": "run-s fix:eslint fix:stylelint fix:prettier",
    "fix:eslint": "npm run lint:eslint -- --fix",
    "fix:stylelint": "npm run lint:stylelint -- --fix",
    "fix:prettier": "prettier --write src"
  },
  "dependencies": {
    "@astrojs/image": "^0.16.3",
    "@astrojs/sitemap": "^1.2.1",
    "astro": "^2.1.8",
    "astro-compress": "^1.1.35",
    "astro-purgecss": "^2.0.1",
    "astro-seo": "^0.7.2",
    "destyle.css": "^4.0.0"
  },
  "devDependencies": {
    "@markuplint/astro-parser": "^3.5.0",
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "@typescript-eslint/parser": "^5.57.0",
    "autoprefixer": "^10.4.14",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-astro": "^0.26.1",
    "eslint-plugin-css-import-order": "^1.1.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-unused-imports": "^2.0.0",
    "lint-staged": "^13.2.0",
    "markuplint": "^3.5.0",
    "npm-run-all": "^4.1.5",
    "postcss-preset-env": "^8.2.0",
    "postcss-sort-media-queries": "^4.3.0",
    "prettier": "^2.8.7",
    "prettier-plugin-astro": "^0.8.0",
    "sass": "^1.60.0",
    "simple-git-hooks": "^2.8.1",
    "stylelint": "^15.3.0",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-recess-order": "^4.0.0",
    "stylelint-config-standard-scss": "^7.0.1"
  },
  "volta": {
    "node": "16.19.1"
  },
  "lint-staged": {
    "**/*.astro": [
      "eslint --fix --quiet",
      "stylelint --fix --quiet",
      "prettier --write --loglevel=error",
      "astro check"
    ],
    "**/*.{js,ts}": [
      "eslint --fix --quiet",
      "prettier --write --loglevel=error"
    ],
    "**/*.{css,scss}": [
      "stylelint --fix --quiet",
      "prettier --write --loglevel=error"
    ],
    "**/*.{json,jsonc}": [
      "prettier --write --loglevel=error"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  }
}
