{
  "name": "static-site-boilerplate-astro",
  "type": "module",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "check": "run-p check:*",
    "check:astro": "astro check",
    "lint": "run-p lint:*",
    "lint:eslint": "ESLINT_USE_FLAT_CONFIG=true eslint \"**/*.{astro,js,ts}\"",
    "lint:stylelint": "stylelint \"**/*.{astro,css,scss}\"",
    "lint:prettier": "prettier --check src --plugin prettier-plugin-astro",
    "fix": "run-s fix:{eslint,stylelint,prettier}",
    "fix:eslint": "npm run lint:eslint -- --fix",
    "fix:stylelint": "npm run lint:stylelint -- --fix",
    "fix:prettier": "prettier --write src --plugin prettier-plugin-astro"
  },
  "dependencies": {
    "@astrojs/sitemap": "^3.1.4",
    "astro": "^4.6.3",
    "astro-seo": "^0.8.3",
    "destyle.css": "^4.0.1"
  },
  "devDependencies": {
    "@eslint/js": "9.1.1",
    "astro-robots-txt": "1.0.0",
    "eslint": "9.2.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-astro": "1.0.3",
    "eslint-plugin-jsx-a11y": "6.8.0",
    "eslint-plugin-simple-import-sort": "12.1.0",
    "globals": "15.1.0",
    "lefthook": "1.6.10",
    "npm-run-all2": "6.1.2",
    "postcss-preset-env": "9.5.9",
    "postcss-sort-media-queries": "5.2.0",
    "prettier": "3.2.5",
    "prettier-plugin-astro": "0.13.0",
    "sass": "1.75.0",
    "stylelint": "16.4.0",
    "stylelint-config-html": "1.1.0",
    "stylelint-config-recess-order": "5.0.1",
    "stylelint-config-standard-scss": "13.1.0",
    "typescript": "5.4.5",
    "typescript-eslint": "7.7.1"
  },
  "volta": {
    "node": "20.12.2"
  }
}
