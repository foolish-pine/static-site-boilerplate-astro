{
  "name": "static-site-boilerplate-astro",
  "type": "module",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "prepare": "npx simple-git-hooks",
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "lint": "run-p lint:*",
    "lint:astro": "astro check",
    "lint:eslint": "eslint \"**/*.{astro,js,ts}\"",
    "lint:stylelint": "stylelint \"**/*.{astro,css,scss}\"",
    "lint:prettier": "prettier --check src --plugin prettier-plugin-astro",
    "fix": "run-s fix:eslint fix:stylelint fix:prettier",
    "fix:eslint": "npm run lint:eslint -- --fix",
    "fix:stylelint": "npm run lint:stylelint -- --fix",
    "fix:prettier": "prettier --write src --plugin prettier-plugin-astro"
  },
  "dependencies": {
    "@astrojs/prefetch": "^0.4.1",
    "@astrojs/sitemap": "^3.0.1",
    "astro": "^3.3.0",
    "astro-imagetools": "^0.9.0",
    "astro-seo": "^0.8.0",
    "destyle.css": "^4.0.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.7.5",
    "astro-robots-txt": "^1.0.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-astro": "^0.29.1",
    "eslint-plugin-css-import-order": "^1.1.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-unused-imports": "^3.0.0",
    "lint-staged": "^15.0.1",
    "npm-run-all": "^4.1.5",
    "postcss-preset-env": "^9.2.0",
    "postcss-sort-media-queries": "^5.2.0",
    "prettier": "^3.0.3",
    "prettier-plugin-astro": "^0.12.0",
    "sass": "^1.69.3",
    "simple-git-hooks": "^2.9.0",
    "stylelint": "^15.10.3",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-recess-order": "^4.3.0",
    "stylelint-config-standard-scss": "^11.0.0"
  },
  "volta": {
    "node": "20.6.1"
  },
  "lint-staged": {
    "*.astro": [
      "eslint --fix --quiet",
      "stylelint --fix --quiet",
      "prettier --write --log-level=error --plugin prettier-plugin-astro",
      "astro check"
    ],
    "*.{js,ts}": [
      "eslint --fix --quiet",
      "prettier --write --log-level=error"
    ],
    "*.{css,scss}": [
      "stylelint --fix --quiet",
      "prettier --write --log-level=error"
    ],
    "*.{json,jsonc}": [
      "prettier --write --log-level=error"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  }
}
