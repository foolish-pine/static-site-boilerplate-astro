{
  "name": "static-site-boilerplate-astro",
  "type": "module",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "check": "run-p check:*",
