{
  "name": "static-site-boilerplate-astro",
  "type": "module",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "prepare": "npx simple-git-hooks",
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "lint": "run-p lint:*",
    "lint:astro": "astro check",
    "lint:eslint": "eslint \"**/*.{astro,js,ts}\"",
    "lint:stylelint": "stylelint \"**/*.{astro,css,scss}\"",
    "lint:prettier": "prettier --check src",
    "fix": "run-s fix:eslint fix:stylelint fix:prettier",
    "fix:eslint": "npm run lint:eslint -- --fix",
    "fix:stylelint": "npm run lint:stylelint -- --fix",
    "fix:prettier": "prettier --write src"
  },
  "dependencies": {
    "@astrojs/prefetch": "^0.3.0",
    "@astrojs/sitemap": "^1.4.0",
    "astro": "^2.8.3",
    "astro-compress": "^1.1.49",
    "astro-imagetools": "^0.8.1",
    "astro-seo": "^0.7.5",
    "destyle.css": "^4.0.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "astro-robots-txt": "^0.5.0",
    "autoprefixer": "^10.4.14",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-astro": "^0.27.2",
    "eslint-plugin-css-import-order": "^1.1.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-unused-imports": "^3.0.0",
    "lint-staged": "^13.2.3",
    "npm-run-all": "^4.1.5",
    "postcss-preset-env": "^9.0.0",
    "postcss-sort-media-queries": "^5.2.0",
    "prettier": "^2.8.8",
    "prettier-plugin-astro": "^0.10.0",
    "sass": "^1.63.6",
    "simple-git-hooks": "^2.8.1",
    "stylelint": "^15.10.1",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-recess-order": "^4.3.0",
    "stylelint-config-standard-scss": "^10.0.0"
  },
  "volta": {
    "node": "18.17.0"
  },
  "lint-staged": {
    "**/*.astro": [
      "eslint --fix --quiet",
      "stylelint --fix --quiet",
      "prettier --write --loglevel=error",
      "astro check"
    ],
    "**/*.{js,ts}": [
      "eslint --fix --quiet",
      "prettier --write --loglevel=error"
    ],
    "**/*.{css,scss}": [
      "stylelint --fix --quiet",
      "prettier --write --loglevel=error"
    ],
    "**/*.{json,jsonc}": [
      "prettier --write --loglevel=error"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  }
}
